<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPhone">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="699dp"
        android:layout_height="1100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/bgaddphone" />

    <LinearLayout
        android:layout_width="286dp"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_marginTop="30sp"
            android:background="@drawable/style_iconbtn"
            android:tint="@color/colorApp"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <ImageButton
            android:id="@+id/btnQuestion"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_marginStart="167sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/style_iconbtn"
            android:tint="@color/colorApp"
            app:srcCompat="@mipmap/icon_search" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:layout_marginTop="50dp"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtUserMessage"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:fontFamily="@font/raleway_medium"
            android:lineSpacingExtra="-10sp"
            android:text="¿Cuál es tu número de teléfono?"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtaddphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-5sp"
            android:layout_marginTop="50sp"
            android:background="@drawable/style_txt"
            android:backgroundTint="#FCFFFFFF"
            android:drawableLeft="@mipmap/flagec"
            android:ems="13"
            android:fontFamily="@font/metrophobic"
            android:hint="2-212-3456"
            android:inputType="phone"
            android:digits="0123456789"
            android:maxLength="10"
            android:textSize="14sp" />

        <Button
            android:id="@+id/bntSiguiente"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-40sp"
            android:layout_marginTop="50sp"
            android:background="@drawable/style_button"
            android:drawableEnd="@mipmap/icon_next"
            android:fontFamily="@font/raleway"
            android:text="SIGUIENTE"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#5B9898"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>